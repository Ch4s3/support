      %button.navbar-toggle.collapsed{ data: { toggle: 'collapse', target: '#primary-nav'}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ href: '/' }
