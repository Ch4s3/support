= wrap_layout :layout do
  %header.primary-header.full-header
    .primary-header-bg
      = partial 'layouts/navbar'
      .container.header-title-container
        %h1.primary-title Aptible Support
        %h2.primary-sub-title How can we help?
        .search-bar
          .search-bar-input
            .input-group
              %input.form-control{ placeholder: 'Search Documentation, Support, and Quickstart guides', type: 'text' }
              %button.input-group-addon{ type: 'submit' }
                %i.fa.fa-search

  .documentation-main
    .container
      .row
        .col-xs-8.col-xs-offset-2
          .categories
            .row
            - current_page.data.categories.each do |category_name, category|
              .col-xs-4
                %a.category-box{ href: category['url'], class: category['svg'] }
                  .category-icon
                    = partial "images/icons/#{category['svg']}.svg"
                  .category-footer
                    .category-title= category['title']

